    "hpp": "^0.2.3",
    "jsonwebtoken": "^9.0.2",
    "mongo-sanitize": "^1.1.0",
    "mongoose": "^8.2.0",
    "neverthrow": "^6.1.0",
    "redis": "^4.6.13",
    "stripe": "^14.20.0",
    "zod": "^3.22.4"
